/* Notification area will be top right but feel free to modify it below. */
#ambiance-notification {
  display: block;
  position: fixed;
  right: 6px;
  top: 86px;
  z-index: 9999;
}

.ambiance {
  text-align: center;
  text-transform: uppercase;
  font-weight: 400;
  font-size: 14px;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 0px;
  float: right;
}

/* Built in custom styling for the notifications. */
.ambiance-title {
  font-weight: bold;
}

.ambiance {
  // float: right;
  clear: both;
  border: 3px solid transparent;
}

.ambiance:hover {
  border: 3px solid transparent;
  /*border: 3px solid #DDDDDD;*/
}

.ambiance-default, .ambiance-success, .ambiance-error, .ambiance-warning {
  border-radius: 3px;
  -moz-border-radius: 3px; /* Firefox 3.6 and earlier. */
  /*margin: 10px;*/
  display: table;
  margin: 0 auto;
}

.ambiance-default {
  background: #454B56;
  color: #F7F7F7;
}

.ambiance-success {
  background: #2ecc71;
  color: white;
}

.ambiance-error {
  background: #C0392B;
  color: #C0392B;
}

.ambiance-warning {
  background: #F9651C;
  color: white;
}

/* Close button attributes -- based off Twitter Bootstrap alert close item. */
.ambiance-close {
  display: block;
  display: none;
  position: relative;
  bottom: -2px;
  right: 0px;
  color: #FFFFFF;
  float: right;
  font-size: 18px;
  font-weight: bold;
  text-decoration: none;
  position: relative;
  line-height: 14px;
  margin-left: 5px;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.ambiance-close:hover {
  color: #BBBBBB;
  cursor: pointer;
}

