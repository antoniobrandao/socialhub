@import 'reset.styl'
@import 'mixins.styl'
@import './external/plugins/ambiance.styl'
@import './external/plugins/nprogress.styl'

body, html
	min-width 800px
	background-color #efefef

.header
	position fixed
	top 0
	left 0
	z-index 2
	height 80px
	width 100%
	padding 0px
	background-color #333
	padding-left 80px
	min-width 800px
	.header-item
		color white
		height 100%
		line-height 80px
		display inline-block
		vertical-align top
		font-weight 300
		padding-left 20px
		padding-right 20px
		position relative
		> p
			margin 0
		no_select()
		&.logo
			font-weight 900
			font-size 22px
			cursor default
			padding-left 0px
			padding-right 80px
		&.navigation-item
			cursor pointer
			&:hover
				background-color #232323
			&.active
				background-color #FFBB3F
				color #333
				font-weight 900

#main-area
	background-color white
	padding 130px 80px 200px 80px
	width 80%
	height 100%
	display inline-block
	vertical-align top
	min-height 100%

.left-bar
	padding-top 100px
	width 20%
	height 100%
	display inline-block
	vertical-align top
	background-color transparent
	.left-bar-item
		no_select()
		color #B3B3B3
		width 120px
		height 60px
		line-height 58px
		padding-left 20px
		padding-right 20px
		display block
		width 100%

#add-addon-button
	no_select()
	float right
	margin-right 30px
	height 40px
	margin-top 20px
	line-height 36px
	border 1px solid #F9651C
	outline none
	color #F9651C
	cursor pointer
	&:active
		opacity 0.8
	&:hover
		color #FFBB3F
		border 1px solid #FFBB3F

.no-list-items-label
	no_select()
	opacity 0.5


side-by-side()
	display inline-block
	vertical-align top
	width 49%
	&.right
		float right

.addons-list
	margin-top 40px
	
.addon-element
	background-color #efefef
	padding 0
	border-radius 2px
	margin-bottom 20px
	position relative
	.controls
		padding 14px
	input
		side-by-side()
		padding 5px
		border-radius 2px
		border 1px solid #E4E4E4
		font-size 14px
		outline none
		&:focus
			border 1px solid #FFBB3F
	.label
		side-by-side()
		no_select()
		margin-bottom 2px
		font-size 10px
		color #999
	.name-field
		no_select()
		margin 0
		display inline-block
		vertical-align top
		margin-left 10px
		color #555
		line-height 20px
		font-size 19px
		font-weight 300
		line-height 22px
		&.faded
			opacity 0.4
	.needs_permission
		no_select()
		margin-bottom 0px
		font-size 9px
		color #999
		margin-top 10px
		text-transform uppercase
		&.active
			color #f9651c
	.input-remove
		no_select()
		position absolute
		top 12px
		right 16px
		font-size 17px
		color #ccc
		cursor pointer
		&:hover
			color #f9651c
	.new-label
		color #2ecc71
		display none
		margin-top 0px
		vertical-align top
		margin-left 10px
		font-size 19px
		font-weight 300
		line-height 22px
	&.new
		border-color #2ecc71
		border 2px solid #2ecc71
		background-color #F9F9F9
		.new-label
			display inline-block

.cover-image
	height 100px
	text-align center
	cursor pointer
	background-color #ccc
	&.empty
		height 40px
	.add-cover-image-text
		disable_select()
		line-height 40px
		font-size 17px
		color #fff
		font-weight 300
	.change-cover-image
		disable_select()
		background-color rgba(0, 0, 0, 0.7)
		display inline-block
		padding 10px
		margin 0
		line-height auto !important
		float right
		line-height 16px
		border-radius 5px
		margin-right 10px
		margin-top 10px
		font-weight 300
		cursor pointer
		color white

#addons-badge
	display none
	position absolute
	top 10px
	right 10px
	background-color #29BF68
	height 20px
	width 20px
	line-height 20px
	border-radius 10px
	text-align center
	font-size 15px
	&.active
		display block
	font-weight 900

.ui-active-toggle
	position relative
	cursor pointer
	display inline-block
	&.active
		.ui-active-toggle-border
			border 2px solid #2ecc71
			.ui-active-toggle-circle
				left 19px
				background-color #2ecc71
	&.pending
		.ui-active-toggle-border
			border 2px solid #f9651c
			.ui-active-toggle-circle
				left 19px
				background-color #f9651c
	.ui-active-toggle-border
		anim_prop(border-color, 0.2s)
		position relative
		border-radius 12px
		height 22px
		width 40px
		border 2px solid #ccc
		.ui-active-toggle-circle
			anim_prop(all, 0.2s)
			position absolute
			top 2px
			left 3px
			width 14px
			height 14px
			border-radius 14px
			background-color #ccc

